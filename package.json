{
  "name": "nuage",
  "version": "1.0.0",
  "main": "main.js",  
  "scripts": {
    "start": "electron .",
    "pack": "npm run pack:arm64",
    "pack:arm64": "electron-builder --mac --arm64",
    "pack:x64": "electron-builder --mac --x64",
    "pack:universal": "electron-builder --mac --universal"
  },
  "devDependencies": {
    "electron": "^30.0.0",               // ou latest
    "electron-builder": "^24.6.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "fr.lann.nuage",
    "productName": "Nuage",
    "mac": {
      "icon": "assets/Nuage.icns",
      "target": "dmg",
      "category": "public.app-category.productivity",
      "extendInfo": {
        "NSCameraUsageDescription": "Utilisé pour les appels vidéo Nextcloud Talk",
        "NSMicrophoneUsageDescription": "Utilisé pour les appels audio Nextcloud Talk",
        "NSCameraUseContinuityCameraDeviceType": true
      }
    }
  }
}
